{
  "name": "contract-testing-example",
  "version": "1.0.0",
  "description": "Complete executable code samples for consumer-driven contract testing with Pact",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "test:consumer": "jest --testPathPattern=consumer",
    "test:provider": "jest --testPathPattern=provider",
    "test": "jest",
    "start:consumer": "ts-node src/consumer/order-service.ts",
    "start:provider": "ts-node src/provider/billing-service.ts",
    "publish:pacts": "pact-broker publish ./pacts --broker-base-url ${PACT_BROKER_URL:-http://localhost:9292} --consumer-app-version $(git rev-parse --short HEAD || echo '1.0.0')"
  },
  "keywords": [
    "contract-testing",
    "pact",
    "microservices",
    "testing",
    "consumer-driven-contracts",
    "api-testing"
  ],
  "author": "Yusuf Elborey",
  "license": "MIT",
  "dependencies": {
    "@pact-foundation/pact": "^13.0.0",
    "express": "^4.18.2",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  }
}

